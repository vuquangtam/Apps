<calculator>:
	canvas:
		Color:
			rgba: 0,0,0,1
		Rectangle:
			size: self.size
			pos : self.pos
	orientation: 'vertical'
	BoxLayout:
		Label:
			text: str(root.Num)
	GridLayout:
		cols: 4
		spacing: 10
		padding: 10
		Button:
			text: 'MODE'
			on_press: root.calculation(self)
		Button:
			text: 'CE'
			on_press: root.clear()
		Button:
			text: 'BS'
			on_press: root.backspace()
		Button:
			text: 'OFF'
			on_press: app.stop()
		Button:
			text: '1'
			on_press: root.calculation(self)
		Button:
			text: '2'
			on_press: root.calculation(self)
		Button:
			text: '3'
			on_press: root.calculation(self)
		Button:
			text: '+'
			on_press: root.calculation(self)
		Button:
			text: '4'
			on_press: root.calculation(self)
		Button:
			text: '5'
			on_press: root.calculation(self)
		Button:
			text: '6'
			on_press: root.calculation(self)
		Button:
			text: '-'
			on_press: root.calculation(self)
		Button:
			text: '7'
			on_press: root.calculation(self)
		Button:
			text: '8'
			on_press: root.calculation(self)
		Button:
			text: '9'
			on_press: root.calculation(self)
		Button:
			text: '*'
			on_press: root.calculation(self)
		Button:
			text: '.'
			on_press: root.calculation(self)
		Button:
			text: '0'
			on_press: root.calculation(self)
		Button:
			text: '='
			on_press: root.answer()
		Button:
			text: '/'
			on_press: root.calculation(self)